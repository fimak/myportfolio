{% extends "::base.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
        '@FimakSiteBundle/Resources/public/css/*'
        output='css/style.css'
        filter='?yui_css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" media="screen" />
    {% endstylesheets %}

    {% javascripts
        '@FimakSiteBundle/Resources/public/js/*'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

{% block sidebar %}
    {{ render(controller( 'FimakSiteBundle:Article:sidebar')) }}
{% endblock %}